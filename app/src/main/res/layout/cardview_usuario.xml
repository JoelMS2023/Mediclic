<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cardview_usuario"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/card_foto"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:src="@drawable/perfil"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:contentDescription="@string/text_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/card_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_myusername"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="@string/text_image">
                </ImageView>

                <TextView
                    android:id="@+id/card_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TelÃ©fono"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                tools:ignore="UseCompoundDrawables">



                <TextView
                    android:id="@+id/card_cedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cedula"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_work"
                    android:contentDescription="@string/text_image">
                </ImageView>

                <TextView
                    android:id="@+id/card_rol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_rol"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />



            </LinearLayout>
            <TextView
                android:id="@+id/card_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>