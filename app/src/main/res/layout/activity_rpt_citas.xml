<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reportes.Rpt_citas">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Reporte de Citas"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@drawable/baseline_circle_left"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_below="@id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_rpt_citas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    >

                    <EditText
                        android:id="@+id/txt_buscador"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Buscar usuario"
                        android:layout_margin="5dp"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:drawableEnd="@drawable/ic_search"
                        >

                    </EditText>

                    <ImageView
                        android:id="@+id/filtro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_filter"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        >

                    </ImageView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_margin="5dp"
                android:id="@+id/card_filtro"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Citas:"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:clickable="false"
                    >
                </TextView>

                <CalendarView
                    android:layout_marginTop="10dp"
                    android:id="@+id/fecha_busqueda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                </CalendarView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 Resultados"
                android:gravity="end"
                android:layout_below="@id/cardview_nombre"
                android:id="@+id/txt_contador"
                android:textColor="@color/danger"
                android:layout_marginEnd="5dp"
                >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_cargar"
                android:layout_below="@id/txt_contador"
                >
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:indeterminate="true"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/txt_sinresultados"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AÃºn no hay citas..."
                    android:visibility="gone"
                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layout_cargar"
                android:id="@+id/recyclerview_citas"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


    </ScrollView>





</RelativeLayout>