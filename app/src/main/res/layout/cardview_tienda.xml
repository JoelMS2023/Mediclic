<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cardview_usuario"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/card_foto"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/perfil"
            android:scaleType="fitCenter"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/text_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/card_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_myusername"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="@string/text_image">
                </ImageView>

                <TextView
                    android:id="@+id/card_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TelÃ©fono"
                    android:textSize="15sp"
                    />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/card_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/card_horas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hh:mm:ss - hh:mm:ss"
                android:gravity="end"
                android:textSize="15sp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>