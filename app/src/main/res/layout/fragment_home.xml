<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_marcacion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:backgroundTint="#98ddca"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:clickable="false">



                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:src="@drawable/marcacion"
                        android:scaleType="fitCenter"
                        android:clickable="false"
                        android:contentDescription="@string/home_op1m"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_op1m"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:clickable="false"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <!-- Tarjetas originales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- Tarjeta de agendamiento -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_agendamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d5ecc2"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false">



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:src="@drawable/agendar"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Tarjeta de horario -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffd3b4"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        android:orientation="vertical">



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:clickable="false"
                            android:contentDescription="@string/home_op2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/horario"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="@string/home_op2"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Tarjetas adicionales -->

            <!-- Tarjeta 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_tratamientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffaaa7"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false">



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:src="@drawable/tratamiento"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op3"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Tarjeta 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#a7c5eb"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false">



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:src="@drawable/doctor"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op4"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op4"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Tarjeta 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_gps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#949cdf"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false">



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:src="@drawable/location_map"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op5"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op5"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Tarjeta 6 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_reportes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B19FD1"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false">



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:src="@drawable/reporte"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op6"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op6"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>


