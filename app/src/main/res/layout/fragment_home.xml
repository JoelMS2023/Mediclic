<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_agendamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"
                            >

                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:src="@drawable/agendar"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op1">

                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="@string/home_op2"
                            android:textSize="20sp"
                            android:textStyle="bold">

                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:clickable="false"
                            android:contentDescription="@string/home_op2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/horario">

                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_tratamientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op3"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"
                            >

                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:src="@drawable/tratamiento"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op3">

                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op4"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"
                            >

                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:src="@drawable/doctor"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op4">

                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_editar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op5"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"
                            >

                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:src="@drawable/update"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op5">

                        </ImageView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_reportes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_op6"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="false"
                            >

                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:src="@drawable/reporte"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:contentDescription="@string/home_op6">

                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>

