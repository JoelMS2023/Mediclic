<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cardview_marcacion"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/card_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/card_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/proyecto_dark"
            />

        <TextView
            android:id="@+id/card_empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de empleado"
            android:textSize="15sp"
            android:textStyle="italic"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/card_fecha_hora"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dd/mm/yyyy hh:mm:ss"
                android:textSize="15sp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>