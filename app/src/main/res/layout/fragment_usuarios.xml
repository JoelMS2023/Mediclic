<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_rpt_marcacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            >

            <EditText
                android:id="@+id/txt_buscador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar usuario"
                android:layout_margin="5dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:drawableEnd="@drawable/ic_search"
                >

            </EditText>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_opciones"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_below="@+id/card_rpt_marcacion"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        </LinearLayout>



        <Button
            android:id="@+id/btn_add_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add"
            android:backgroundTint="@color/success"
            android:textColor="@color/white"
            >
        </Button>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 Usuarios"
        android:gravity="end"
        android:layout_below="@id/layout_opciones"
        android:id="@+id/txt_contador"
        android:textColor="@color/danger"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_cargar"
        android:layout_below="@id/txt_contador"
        >
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="true"
            />

        <TextView
            android:id="@+id/txt_existe"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃºn no hay Usuarios..."
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_cargar"
        android:id="@+id/recyclerview_usuarios"
        >

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>